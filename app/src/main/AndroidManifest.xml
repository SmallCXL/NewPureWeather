<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.arthur.myapplication">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        tools:replace ="android:icon"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="com.example.arthur.myapplication.activity.SearchActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.arthur.myapplication.activity.WeatherActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.arthur.myapplication.activity.CityManagerActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="com.example.arthur.myapplication.activity.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Translucent">

        </activity>

    </application>

</manifest>
