<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_view_margin"
        android:layout_marginLeft="@dimen/small_interval"
        android:layout_marginRight="@dimen/small_interval"
        android:layout_marginTop="@dimen/card_view_margin"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@anim/touch_raise"
        android:translationZ="2dp"
        app:cardBackgroundColor="#F5F5F5"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_interval"
            android:paddingTop="@dimen/small_interval"
            android:paddingRight="@dimen/small_interval"
            android:paddingBottom="@dimen/small_interval"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="间隔三小时预测"
                android:layout_marginLeft="@dimen/small_interval"
                android:layout_marginBottom="@dimen/medium_interval"
                android:layout_marginTop="@dimen/small_interval"
                android:textSize="14sp"
                android:textColor="@color/textColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/hourly_forecast_layout">

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>