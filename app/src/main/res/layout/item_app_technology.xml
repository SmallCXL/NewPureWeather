<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/about_app_card_view_margin"
        android:layout_marginLeft="@dimen/about_app_card_view_margin"
        android:layout_marginRight="@dimen/about_app_card_view_margin"
        android:layout_marginTop="@dimen/about_app_card_view_margin"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@anim/touch_raise"
        android:translationZ="2dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/about_app_technology_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/about_app_card_view_image_height" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/medium_interval"
                    android:layout_marginBottom="@dimen/medium_interval"
                    android:textSize="24sp"
                    android:textColor="@color/colorWhite"
                    android:text="开源技术"/>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medium_interval"
                android:paddingRight="@dimen/medium_interval"
                android:paddingTop="@dimen/medium_interval"
                android:paddingBottom="@dimen/medium_interval"
                android:textColor="@color/textColor"
                android:text="@string/app_open_source"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/colorAccent"
                android:id="@+id/app_technology_btn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingLeft="@dimen/medium_interval"
                android:background="@color/cardview_light_background"
                android:gravity="center_vertical"
                android:text="点击我跳转本项目地址"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>