<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"  >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView

                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                card_view:cardElevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:translationZ="2dp"
                app:cardBackgroundColor="#F5F5F5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:stateListAnimator="@anim/touch_raise"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.27"/>

                          <TextView
                                android:id="@+id/now_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="29°"
                                android:textSize="72sp"
                                android:textColor="@color/textColor"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-thin"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/moon"
                            android:layout_gravity="center"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="多云"
                            android:textSize="12sp"
                            android:id="@+id/now_cond"
                            android:textColor="@color/textColor"
                            android:fontFamily="sans-serif-thin"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.63"/>
                    </LinearLayout>






                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.30"
                        />

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="#272636"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@drawable/humidity"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="12sp"
                                android:text="相对湿度："
                                android:textColor="@color/textColor"
                                android:layout_gravity="bottom"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/humidity"
                                android:text="65%"
                                android:gravity="bottom"
                                android:textColor="@color/textColor"
                                android:fontFamily="sans-serif-light"
                                android:textSize="12dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@drawable/rainy_pos"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="12sp"
                                android:textColor="@color/textColor"
                                android:text="降水概率："
                                android:layout_gravity="bottom"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/rainy_pos"
                                android:text="65%"
                                android:gravity="bottom"
                                android:textColor="@color/textColor"
                                android:fontFamily="sans-serif-light"
                                android:textSize="12dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@drawable/temp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="12sp"
                                android:textColor="@color/textColor"
                                android:text="气温范围："
                                android:layout_gravity="bottom"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/temp_range"
                                android:text="28°C~30°C"
                                android:gravity="bottom"
                                android:textColor="@color/textColor"
                                android:fontFamily="sans-serif-light"
                                android:textSize="12dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"/>
                </LinearLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                card_view:cardElevation="2dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:translationZ="2dp"
                app:cardBackgroundColor="#F5F5F5"
                android:foreground="?android:attr/selectableItemBackground"
                android:stateListAnimator="@anim/touch_raise"
                card_view:cardCornerRadius="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/chart_top"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.17"/>
                        <Button
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_1_style"
                            android:layout_marginTop="8dp"
                            android:id="@+id/max_temp_btn"
                            android:text="最高气温"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"/>
                        <Button
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_2_style"
                            android:layout_marginTop="8dp"
                            android:id="@+id/min_temp_btn"
                            android:textColor="@color/colorWhite"
                            android:text="最低气温"
                            android:textSize="12sp"/>
                        <Button
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_3_style"
                            android:layout_marginTop="8dp"
                            android:id="@+id/humidity_btn"
                            android:textColor="@color/colorWhite"
                            android:text="相对湿度"
                            android:textSize="12sp"/>
                        <Button
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_4_style"
                            android:layout_marginTop="8dp"
                            android:id="@+id/rainy_pos_btn"
                            android:textColor="@color/colorWhite"
                            android:text="降水概率"
                            android:textSize="12sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                card_view:cardElevation="2dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_view_margin"
                android:layout_marginRight="@dimen/card_view_margin"
                android:translationZ="2dp"
                app:cardBackgroundColor="#F5F5F5"
                android:foreground="?android:attr/selectableItemBackground"
                android:stateListAnimator="@anim/touch_raise"
                card_view:cardCornerRadius="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/sport"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColor"
                                    android:layout_marginLeft="@dimen/layout_margin"
                                    android:fontFamily="sans-serif-light"
                                    android:layout_gravity="left"
                                    android:text="运动指数："/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColor"
                                    android:fontFamily="sans-serif-light"

                                    android:id="@+id/sport_suggestion_brf"
                                    android:text="较适宜"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sport_suggestion"
                                android:textColor="@color/textColorLight"
                                android:textSize="12sp"
                                android:text="有降水，推荐您在室内进行健身休闲运动；若坚持户外运动，须注意携带雨具并注意避雨防滑。"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:layout_marginLeft="@dimen/layout_margin"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:background="@color/textColor"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/travel"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColor"
                                    android:layout_marginLeft="@dimen/layout_margin"
                                    android:fontFamily="sans-serif-light"
                                    android:layout_gravity="left"
                                    android:text="旅游指数："/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColor"
                                    android:fontFamily="sans-serif-light"
                                    android:id="@+id/travel_suggestion_brf"
                                    android:text="较适宜"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/travel_suggestion"
                                android:textColor="@color/textColorLight"
                                android:textSize="12sp"

                                android:text="有降水，温度适宜，在细雨中游玩别有一番情调，可不要错过机会呦！但记得出门要携带雨具。"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:layout_marginLeft="@dimen/layout_margin"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:background="@color/textColor"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/car_wash"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColor"
                                    android:layout_marginLeft="@dimen/layout_margin"
                                    android:fontFamily="sans-serif-light"
                                    android:layout_gravity="left"
                                    android:text="洗车指数："/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColor"
                                    android:fontFamily="sans-serif-light"
                                    android:id="@+id/car_wash_suggestion_brf"
                                    android:text="较适宜"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/car_wash_suggestion"
                                android:textColor="@color/textColorLight"
                                android:textSize="12sp"
                                android:text="不宜洗车，未来24小时内有雨，如果在此期间洗车，雨水和路上的泥水可能会再次弄脏您的爱车。"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:layout_marginLeft="@dimen/layout_margin"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.v4.widget.SwipeRefreshLayout>
