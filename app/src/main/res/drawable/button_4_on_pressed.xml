<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角 -->
    <corners
        android:radius="2dp"/>
    <!-- 设置圆角半径 -->

    <!-- 间隔 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
    <!-- 各方向的间隔 -->

    <!-- 大小 -->
    <size
        android:width="45dp"
        android:height="32dp"/>
    <!-- 宽度和高度 -->

    <!-- 填充 -->
    <solid
        android:color="@color/indigoDark"/>
    <!-- 填充的颜色 -->

</shape>

