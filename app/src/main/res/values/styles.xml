<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="IndigoTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="GreenTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/greenPrimary</item>
        <item name="colorAccent">@color/orangePrimary</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Guide" parent="AppTheme.Base">
        <item name="android:background">@drawable/guide</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>
